 <div>
    <%= @pet.name %>
    <%= @pet.price %>
    <%= @pet.age %>
    <%= @pet.size %>
    <%= @pet.description %>
    <%= @pet.species %>
</div>

<%= link_to "Back to pets", pets_path %>
<%= link_to "Edit pet", edit_pet_path(@pet) %>
<div><%= link_to "Delete Pet", @pet, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></div>

<%= simple_form_for [@pet, @booking] do |f| %>
  <%#= f.error_notification %>
  <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
